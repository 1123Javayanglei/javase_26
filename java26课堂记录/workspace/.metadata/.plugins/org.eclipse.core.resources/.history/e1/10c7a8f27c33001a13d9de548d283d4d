package com.zhiyou100.day07;

public class Demo1_Method3 {

//	public static void main(String[] args) {
//		//参数是基本数据类型：
//		//基本数据类型作为方法参数时 传递的是常量的值
//		int b=2;
//		test1(b);
//		/*完全等价于：
//		 *    int a=b;//把变量b的值复制一份给了a
//		 *    a++;//a自增  和b无关
//		 */
//		System.out.println("b="+b);
//	}
	public static void test1(int a) {
		a++;
	}
	public static void test2(int[] arr) {
		arr[0]++;
	}
    public static void main(String[] args) {
    	         //参数是引用数据类型：：数组
    			//引用数据类型作为方法参数时：传递的是对象的内存地址：等价于给同一个对象起了两个名字
    			int[] array= {1,4,6};
    			test2(array);
    			/*完全等价于：int[] arr=array;  //给array指向的数组对象又起个名字叫arr
    			 *        arr[0]++;   //通过arr数组对16行的数组对象数据进行修改
    			 * */
    			System.out.println(array[0]);//2
	}
}
