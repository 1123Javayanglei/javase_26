package com.zhiyou100.day08;
public class Demo1_OOP5_Constructor {

	public static void main(String[] args) {
		/*构造方法、构造器：用于构建创造对象的方法
		 *构造方法特定 ：1  构造方法被关键字new调用  用于创建对象
		 *             每调用一次 就创建一个对象
		 *          2  构造方法名字必须和类名一致
		 *          3   构造方法没有返回值类型的标示
		 *          4  一个类如果没有定义构造方法   默认有一个无参数的构造方法
		 *          5 对象不能调用构造方法
		 *构造方法和普通方法的区别：
		 *         1 格式不同
		 *            构造方法没有返回值类型的标示
		 *            普通方法必须有返回值类型的标示  如果没有返回值 用void来标示
		 *         2 命名不同
		 *             构造方法名字必须和类名一致
		 *             普通方法 名字可以是类名  但不建议相同
		 *         3 调用不同
		 *              构造方法被关键字new调用  调用一次就创建一个对象
		 *              普通方法被对象调用 一个对象可以调用多次普通方法
		 *         4 作用不同
		 *              构造方法的作用是创建对象
		 *              普通方法代表本类创建的对象 具有的某一个指定功能*/
		//创建对象
		Teacher t1=new Teacher();//The constructor Teacher() is undefined
		Teacher t2=new Teacher(1);
		t2=new Teacher(1);
		t2=new Teacher(1);
		//创建对象并起个名字的格式：对象类型 引用名=new 对象类型();
		//给对象的属性赋值
		t1.age=28;
		t1.name="韩梅梅";
		//调用对象的方法
		t1.show();
		
		
	}
}
class  Teacher{
//	//普通方法：
	public void Teacher() {//This method has a constructor name
		System.out.println("public void Teacher() ");
	}
	//创建一个构造方法：无参数的构造方法
	public  Teacher() {
		System.out.println("public  Teacher()");
	}
	public  Teacher(int a) {
		System.out.println("public  Teacher(int a)");
	}
	int age=29;
	String name;
	public void show() {
		System.out.println("age="+age+",name="+name);
	}
} 
